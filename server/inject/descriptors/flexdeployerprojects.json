{
  "type": "object",
  "comment": "ListView",
  "properties": {
    "listItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "string": {
            "type": "string",
            "update": {
              "type": "none"
            },
            "selector": "td",
            "control": "property.innerText"
          },
          "action": {
            "type": "action",
            "selector": "td",
            "selectIndex": 1,
            "control": "action.link"
          },
          "icon": {
            "type": "string"
          }
        }
      },
      "update": {
        "type": "none"
      },
      "selectorAll": "tr[style]"
    },
    "isProjects": {
      "type": "identifier",
      "selector": "div.FlexDeployer",
      "control": "exists",
      "selectContains": "Flex Deployer > Projects"
    },
    "filter": {
      "type": "string",
      "control": {
        "fn": "value",
        "control": "property.innerText"
      },
      "selector": ".table-filter"
    }
  },
  "connect": [
    {
      "match": [
        "isProjects"
      ],
      "screens": [
        "flexdeployerprojects"
      ]
    }
  ]
}
